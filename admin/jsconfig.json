{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@api/*": ["src/api/*"],
      "@api": ["src/api"],
      "@context/*": ["src/context/*"],
      "@context": ["src/context"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
